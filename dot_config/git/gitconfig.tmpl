[core]
    editor = nvim    
    excludesFile = {{ .chezmoi.homeDir }}/.config/git/ignore

[init]
    defaultBranch = main

[user]
    name = {{ .name }}
    email = {{ .email }}

[pull]
    # default pull strategy is rebase rather than merge
    rebase = true

[fetch]
    # run git remote prune on every fetch
    prune = true

[diff]
    # add a new color in a diff file if lines have simply moved 
    colorMoved = zebra

    # use nvim as difftool
    tool = nvim

[alias]
    # inspiration from https://gist.github.com/mwhite/6887990

    # one-line log
    l = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short

    a = add
    ap = add -p
    r = restore
    rp = restore -p
    rs = restore --staged
    rsp = restore --staged -p
    res = reset
    nuke = reset --hard
    c = commit --verbose
    ca = commit -a --verbose
    cm = commit -m
    cam = commit -a -m
    m = commit --amend --verbose
    mne = commit --amend --no-edit
    please = push --force-with-lease
    
    d = diff
    ds = diff --stat
    dc = diff --cached
    dv = difftool -t vimdiff -y

    s = status -sb
    co = checkout
    cob = checkout -b
    # list branches sorted by last modified
    b = "!git for-each-ref --sort='-authordate' --format='%(authordate)%09%(objectname:short)%09%(refname)' refs/heads | sed -e 's-refs/heads/--'"

    wip = commit -a -m "wip" 
    unwip = reset HEAD~1

    # list aliases
    la = "!git config -l | grep alias | cut -c 7-"
